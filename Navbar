const synchronizeCrosshair = (event, sourceChart, targetChart) => {
  if (!event || !event.point) return;
  
  const x = sourceChart.timeScale().coordinateToTime(event.point.x);
  const y = targetChart.series[0].coordinateToPrice(event.point.y);
  if (x !== undefined && y !== undefined) {
    targetChart.timeScale().setCrosshairXY(event.point.x, event.point.y);
  }
};
